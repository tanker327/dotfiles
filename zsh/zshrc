#####################################################
# PATH Configuration
#####################################################

# Custom git commands and system paths
export PATH=$HOME/dotfiles/git/new-git-command:/usr/local/sbin:$PATH

# Local binaries (UV, Claude Code, pipx, etc.)
export PATH="$PATH:$HOME/.local/bin"

# Antigravity (if installed)
if [ -d "$HOME/.antigravity/antigravity/bin" ]; then
  export PATH="$HOME/.antigravity/antigravity/bin:$PATH"
fi

#####################################################
# Oh My Zsh Configuration
#####################################################

export ZSH=$HOME/.oh-my-zsh


# Theme
ZSH_THEME="robbyrussell"

# Plugins
plugins=(
  git
  docker
  docker-compose
  sudo
  z
  colored-man-pages
  command-not-found
  extract
  # Note: Install these manually:
  # zsh-autosuggestions
  # zsh-syntax-highlighting
)

# Load Oh My Zsh
source $ZSH/oh-my-zsh.sh

#####################################################
# Development Tools Initialization
#####################################################

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# Java (macOS)
if JAVA_HOME=$(/usr/libexec/java_home 2>/dev/null); then
  export JAVA_HOME
  export PATH="$JAVA_HOME/bin:$PATH"
fi

#####################################################
# Custom Configurations
#####################################################

# Import custom aliases and functions
source ~/dotfiles/zsh/dev

# Import environment variables (if exists)
[ -f ~/.env-keyexport ] && source ~/.env-keyexport

#####################################################
# Shell Completions
#####################################################

# Docker CLI completions (macOS Docker Desktop)
if [ -d "$HOME/.docker/completions" ]; then
  fpath=($HOME/.docker/completions $fpath)
fi
autoload -Uz compinit
compinit

#####################################################
# Welcome Message
#####################################################

echo "\n\033[1;36m======================================================\033[0m"
echo "\033[1;32m  Welcome back, this is $(hostname)  \033[0m"
echo "\033[1;36m======================================================\033[0m\n"
